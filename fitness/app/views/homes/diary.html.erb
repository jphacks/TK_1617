<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">筋トレ日記</h3>
  </div>
  <div class="panel-body">
    <h1><%= @date.year%>年<%= @date.month%>年<%= @date.day%>日</h1>
    <div class="list-group">
      <a href="#" class="list-group-item active">トレーニング　</a>
      <% @diaries.each do |diary| %>
      <a href="#" class="list-group-item">
        <legend><%= diary.diary_date %></legend>
        <h2><%= Event.all.find(diary.event_id).event_name %></h2>
        <h3>負荷  <%= diary.weight %> kg  を <%= diary.num %>回×<%= diary.set_num %>セット</h3>
      </a>
      <% end %>
    </div>

    <div class="list-group">
      <a href="#" class="list-group-item active">プロテイン　</a>
      <% @proteins.each do |protein| %>
      <a href="#" class="list-group-item">
        <legend><%= protein.diary_date %></legend>

        <h3>　タンパク質 <%= protein.protein_intake %>g  接種</h3>
      </a>
      <% end %>
    </div>

    <div class="page-header">
      <h1>プロフィール</h1>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>身長</th>
            <th>体重</th>
            <th>筋肉量</th>
            <th>左腕</th>
            <th>右腕</th>
            <th>左足</th>
            <th>右足</th>
            <th>体幹</th>
            <th>脂肪量</th>
          </tr>
        </thead>

        <tbody>
          <tr>

            <td><% @heights.each do |height| %>
              <p><%= height.height %></p>
            <% end %></td>

            <td><% @weights.each do |weight| %>
              <p><%= weight.weight %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.muscle_mass %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.l_arm %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.r_arm %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.l_leg %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.r_leg %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.body %></p>
            <% end %></td>

            <td><% @muscle_masses.each do |muscle_mass| %>
              <p><%= muscle_mass.fat %></p>
            <% end %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
